@model MvcMovie.Models.SignIn

<link rel="stylesheet" href="~/css/styles.css" />
<div class="main-container">
    <div class="login-container">
        @using (Html.BeginForm("Login", "Home", FormMethod.Post))
        {
            @Html.ValidationSummary(true, "Login failed. Check your login details.");
            <div class="login-form">
                <h2>Sign In</h2>
                <div class="form-group">
                    @Html.LabelFor(m => m.Username) <!-- Use Html.LabelFor for labels -->
                    @Html.TextBoxFor(m => m.Username, new { @class = "form-control" }) <!-- Use Html.TextBoxFor for text input -->
                    @Html.ValidationMessageFor(m => m.Username) <!-- Optionally display validation messages -->
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Password)
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" }) <!-- Use Html.PasswordFor for password input -->
                    @Html.ValidationMessageFor(m => m.Password)
                </div>
                <button type="submit" value="submit" asp-page-handler="Submit" class="btn btn-primary">Log In</button>
                
                <div class="register-options">
                    <p>Don't have an account? <a asp-area="" asp-controller="Home" asp-action="Register">Register</a></p>
                </div>
            </div>
        }
    </div>
</div>
